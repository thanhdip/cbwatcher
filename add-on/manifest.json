{
  "manifest_version": 2,
  "name": "CB Monitor",
  "version": "1.1",
  "icons": {
    "48": "icons/cbicon.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "cbpost@example.com",
      "strict_min_version": "60.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/cbicon.svg"
  },

  "permissions": ["<all_urls>", "tabs", "activeTab", "nativeMessaging"]
}
